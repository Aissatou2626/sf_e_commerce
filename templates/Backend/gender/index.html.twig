{% extends 'base.html.twig' %}

{% block title %}
	Gestion du genre d'utilisateur
	{{ parent() }}
{% endblock %}

{% block body %}

	<section class="container mt-2">
		<h1 class="text-center">Gestion du genre d'utilisateur</h1>
		<a href="{{ path('admin.gender.create')}}" class="btn btn-primary">Créer un genre</a>

		<table class="container mt-4">
			<thead>
				<tr>
					<th>ID</th>
					<th>Nom</th>
					<th>Visibilité</th>
				</tr>
			</thead>
			<tbody>
				{% for gender in genders %}
					<tr>
						<td>{{ gender.id }}</td>
						<td>{{ gender.name }}</td>
						<td>{{ gender.enable ? 'Actif' : 'Inactif' }}</td>
						<td>
							<div class="cell-flex">
								<a href="{{ path('admin.gender.update', {id: gender.id}) }}">Modifier</a>
								{% include "Backend/Components/_delete.html.twig" with {
									url: path('admin.gender.delete', {id: gender.id}),
									message: 'Etes-vous de bien vouloir supprimer ce genre ?',
						    		id:gender.id }
								%}

							</div>
						</td>
					</tr>

				{% endfor %}
			</tbody>

		</table>
	</section>
{% endblock %}
